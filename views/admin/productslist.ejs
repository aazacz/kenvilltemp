<%-include('../Partials/adminheader')-%>    
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Products List</h2>
                    <p></p>
                </div>
                <div>
               <!--      <a href="#" class="btn btn-light rounded font-md">Export</a>
                    <a href="#" class="btn btn-light rounded  font-md">Import</a> -->
                    <a href="/admin/addproduct"><button class="btn btn-primary btn-sm rounded" type="submit">Create new</button></a>
                </div>
            </div>
            <div class="card mb-4">
               
               
               
                <header class="card-header">
                    <div class="row align-items-center">
                        <div class="col col-check flex-grow-0">
                            <div class="form-check ms-2">
                                <input class="form-check-input" type="checkbox" value="">
                            </div>
                        </div>
                        <div class="col-md-3 col-12 me-auto mb-md-0 mb-3">
                            <select class="form-select">
                                <option selected>All category</option>
                                <option>Electronics</option>
                                <option>Clothes</option>
                                <option>Automobile</option>
                            </select>
                        </div>
                        <div class="col-md-2 col-6">
                            <input type="date" value="02.05.2021" class="form-control">
                        </div>
                        <div class="col-md-2 col-6">
                            <select class="form-select">
                                <option selected>Status</option>
                                <option>Active</option>
                                <option>Disabled</option>
                                <option>Show all</option>
                            </select>
                        </div>
                    </div>
                </header> <!-- card-header end// -->




                <div class="card-body">
                    <article class="itemlist">
                        <div class="row align-items-center">
                           
                            <!-- flex-grow-1 -->
                            <div class="col-lg-1 col-sm-4 col-8  col-name">  
                                <a class="itemside" href="#">
                                    <div class="left"> <h6 class="mb-0">Image</h6></div>
                                   <!--  <div class="info"> <h6 class="mb-0">Name</h6></div> -->
                                    <!-- <div class="info"> <h6 class="mb-0">Brand</h6></div> -->
                                </a>
                            </div>

                            <div class="col-lg-1 col-sm-2 col-4 col-price"> <h6 class="mb-0"> Name</h6></div>
                            <div class="col-lg-1 col-sm-2 col-4 col-price"> <h6 class="mb-0"> Brand</h6></div>
                            <div class="col-lg-2 col-sm-2 col-4 col-price"> <h6 class="mb-0"> category</h6></div>

                            <div class="col-lg-1 col-sm-2 col-4 col-status"><h6 class="mb-0"> Price</h6> </div>
                            <div class="col-lg-1 col-sm-2 col-4 col-status"><h6 class="mb-0"> size</h6></div>
                            <div class="col-lg-1 col-sm-2 col-4 col-date"><h6 class="mb-0"> Qty</h6></div>
                            <div class="col-lg-1 col-sm-2 col-4 col-date"><h6 class="mb-0"> Tax</h6></div>
                            <div class="col-lg-2 col-sm-2 col-4 col-date"><h6 class="mb-0"> isCreated</h6></div>
                            <div class="col-lg-1 col-sm-2 col-4 col-action text-end"> 

                                <h6 class="mb-0"> Action</h6>
                                    <!--  <a href="#" class="btn btn-sm font-sm rounded btn-brand">
                                        <i class="material-icons md-edit"></i> Edit
                                    </a>
                                    <a href="#" class="btn btn-sm font-sm btn-light rounded">
                                        <i class="material-icons md-delete_forever"></i> Delete
                                    </a> -->
                            </div>
                        </div> <!-- row .// -->
                    </article> <!-- itemlist  .// -->
                    
                    
                    <%category.forEach(function(product) { 
                        %>
                    <article class="itemlist">
                        <div class="row align-items-center">
                            
                                
                            <!-- flex-grow-1 -->
                            <div class="col-lg-1 col-sm-4 col-8  col-name">  
                                <a class="itemside" href="#">
                                    <div class="left"> <div class="left">
                                        <img src="/upload/<%=product.image[0]%>" class="img-sm img-thumbnail" >
                                    </div></div>
                                   <!--  <div class="info"> <h6 class="mb-0">Name</h6></div> -->
                                    <!-- <div class="info"> <h6 class="mb-0">Brand</h6></div> -->
                                </a>
                            </div>

                            <div class="col-lg-1 col-sm-2 col-4 col-price"> <h6 class="mb-0"> <%=product.name%></h6></div>
                            <div class="col-lg-1 col-sm-2 col-4 col-price"> <h6 class="mb-0"> <%=product.brand%></h6></div>
                            <div class="col-lg-2 col-sm-2 col-4 col-price"> <h6 class="mb-0"> <%=product.category_id.name%></h6></div>

                            <div class="col-lg-1 col-sm-2 col-4 col-status"><h6 class="mb-0"> <%=product.price%></h6> </div>
                            <div class="col-lg-1 col-sm-2 col-4 col-status"><h6 class="mb-0"> <%=product.size%></h6></div>
                            <div class="col-lg-1 col-sm-2 col-4 col-date"><h6 class="mb-0"> <%=product.quantity%></h6></div>
                            <div class="col-lg-1 col-sm-2 col-4 col-date"><h6 class="mb-0"> <%=product.tax%></h6></div>
                            <div class="col-lg-2 col-sm-2 col-4 col-date"><h6 class="mb-0"> <%=new Date(product.isCreated).toLocaleDateString()%></h6></div>
                            <div class="col-lg-1 col-sm-2 col-4 col-action text-end"> 
                               
                                <a href="/admin/updateproduct?productid=<%=product._id %>" class="btn btn-sm font-sm rounded btn-brand">
                                    <i class="material-icons md-edit"></i> 
                                </a>

                                <form action="/admin/deleteproduct" method="post">
                                    <input type="hidden" value="<%=product._id%>" name="id">
                                    <button class="btn btn-sm font-sm btn-light rounded" type="submit"><i class="material-icons md-delete_forever"></i> </button>
                                </form>
                               
                            </div>
                         
                        </div> <!-- row .// -->
                    </article> 
                    
                    <%
                        }) %>
                    
                    
                    
                    
                    
                   
                    <!-- itemlist  .// -->
                    
                   
                </div> <!-- card-body end// -->
            </div> <!-- card end// -->
            <div class="pagination-area mt-30 mb-50">
                <nav aria-label="Page navigation example">
               
                </nav>
            </div>
        </section> <!-- content-main end// -->
        <%-include('../Partials/adminfooter')-%>